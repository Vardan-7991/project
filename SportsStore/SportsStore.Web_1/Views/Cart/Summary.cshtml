@model SportsStore.Domain.Entities.Cart
<div id="cart">
    <span class="caption">
        <b><img src="data:image/png;base64," width="25" height="25" /> </b>
        @Model.Lines.Sum(x => x.Quantity) item(s),
        @Model.ComputeTotalValue().ToString("c")
    </span>
    @Html.ActionLink("Checkout", "Index", new { returnUrl = Request.Url.PathAndQuery }, null)
</div>
